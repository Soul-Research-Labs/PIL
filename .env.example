# ZASEON Root Environment Configuration
# Copy to .env and fill in your values.
# Variables marked REQUIRED will cause docker-compose to fail if unset.

# ── Compose Project ──────────────────────────────────────────────────────────
COMPOSE_PROJECT_NAME=zaseon

# ── PostgreSQL ───────────────────────────────────────────────────────────────
POSTGRES_USER=zaseon
POSTGRES_PASSWORD=          # REQUIRED — choose a strong password
POSTGRES_DB=zaseon

# ── Redis ────────────────────────────────────────────────────────────────────
REDIS_PASSWORD=zaseon-dev-only   # change for production

# ── MinIO (S3-compatible storage) ────────────────────────────────────────────
MINIO_ROOT_USER=            # REQUIRED
MINIO_ROOT_PASSWORD=        # REQUIRED — min 8 characters

# ── Celery Flower (task monitoring) ──────────────────────────────────────────
FLOWER_USER=admin
FLOWER_PASSWORD=            # REQUIRED

# ── Grafana ──────────────────────────────────────────────────────────────────
GRAFANA_PASSWORD=admin      # change for production

# ── NextAuth.js ──────────────────────────────────────────────────────────────
# REQUIRED — generate with: openssl rand -base64 32
NEXTAUTH_SECRET=

# ── GitHub OAuth (optional — enables "Sign in with GitHub") ──────────────────
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ── Engine / Backend ─────────────────────────────────────────────────────────
# ZASEON_SECRET_KEY=         # JWT signing key (defaults to a dev key if unset)
# ZASEON_ENCRYPTION_KEY=     # AES-256-GCM key for field encryption
# ZASEON_GITHUB_WEBHOOK_SECRET=  # GitHub webhook HMAC secret
# ZASEON_GITHUB_TOKEN=       # Personal access token for private repo cloning
# ZASEON_OPENAI_API_KEY=     # LLM provider key
