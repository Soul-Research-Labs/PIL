# ZASEON Engine Configuration
# Copy this to .env and fill in your values

# ── App ──────────────────────────────────────────────────────────────────────
ZASEON_APP_ENV=development
ZASEON_DEBUG=true
ZASEON_SECRET_KEY=change-me-in-production
ZASEON_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ZASEON_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
ZASEON_JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# ── Database ─────────────────────────────────────────────────────────────────
ZASEON_DATABASE_URL=postgresql+asyncpg://zaseon:zaseon@localhost:5432/zaseon

# ── Redis ────────────────────────────────────────────────────────────────────
ZASEON_REDIS_URL=redis://localhost:6379/0
ZASEON_CELERY_BROKER_URL=redis://localhost:6379/1
ZASEON_CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ── S3 / MinIO ──────────────────────────────────────────────────────────────
ZASEON_S3_ENDPOINT=http://localhost:9000
ZASEON_S3_ACCESS_KEY=minioadmin
ZASEON_S3_SECRET_KEY=minioadmin

# ── GitHub App ───────────────────────────────────────────────────────────────
ZASEON_GITHUB_APP_ID=
ZASEON_GITHUB_APP_PRIVATE_KEY=
ZASEON_GITHUB_WEBHOOK_SECRET=

# ── LLM ──────────────────────────────────────────────────────────────────────
ZASEON_ANTHROPIC_API_KEY=
ZASEON_OPENAI_API_KEY=
ZASEON_LLM_PROVIDER=anthropic
ZASEON_LLM_MODEL=claude-sonnet-4-20250514

# ── Blockchain / Web3 ───────────────────────────────────────────────────────
ZASEON_ETHERSCAN_API_KEY=
ZASEON_BSCSCAN_API_KEY=
ZASEON_POLYGONSCAN_API_KEY=
ZASEON_ALCHEMY_API_KEY=
ZASEON_INFURA_API_KEY=

# ── Soul Protocol Fuzzer ────────────────────────────────────────────────────
ZASEON_SOUL_FUZZ_DEFAULT_MODE=standard
ZASEON_SOUL_FUZZ_MAX_DURATION=300
ZASEON_SOUL_FUZZ_MAX_ITERATIONS=50000
ZASEON_SOUL_FUZZ_PARALLEL_WORKERS=4
ZASEON_SOUL_FUZZ_ENABLE_LLM=true
ZASEON_SOUL_FUZZ_SAVE_CORPUS=true

# ── v2 Engine Toggles ──────────────────────────────────────────────────────
ZASEON_SOUL_FUZZ_ENABLE_BYTECODE=true
ZASEON_SOUL_FUZZ_ENABLE_TAINT=true
ZASEON_SOUL_FUZZ_ENABLE_GAS_PROFILING=true
ZASEON_SOUL_FUZZ_ENABLE_INVARIANT_SYNTH=true
ZASEON_SOUL_FUZZ_ENABLE_STATE_REPLAY=true
ZASEON_SOUL_FUZZ_ENABLE_EXPLOIT_COMPOSER=true

# ── Bytecode Analyzer ──────────────────────────────────────────────────────
ZASEON_BYTECODE_MAX_INSTRUCTIONS=100000
ZASEON_BYTECODE_ENABLE_CFG=true
ZASEON_BYTECODE_ENABLE_STORAGE_LAYOUT=true

# ── Gas Profiler ────────────────────────────────────────────────────────────
ZASEON_GAS_PROFILER_EVM_VERSION=shanghai
ZASEON_GAS_PROFILER_ANOMALY_THRESHOLD=2.0
ZASEON_GAS_PROFILER_MAX_TRACES=10000

# ── Invariant Synthesizer ──────────────────────────────────────────────────
ZASEON_INVARIANT_MIN_CONFIDENCE=0.7
ZASEON_INVARIANT_MAX_TEMPLATES=30

# ── Exploit Composer ────────────────────────────────────────────────────────
ZASEON_EXPLOIT_MAX_CHAIN_LENGTH=10
ZASEON_EXPLOIT_ENABLE_FLASH_LOAN=true

# ── Auto-Remediation ───────────────────────────────────────────────────────
ZASEON_REMEDIATION_ENABLED=false
ZASEON_REMEDIATION_AUTO_PR=false
ZASEON_REMEDIATION_MIN_CONFIDENCE=0.85
